<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ios_card_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginEnd="16dp"
            android:tint="#007AFF"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ETF Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1C1C1E"
            android:gravity="center" />

        <ImageView
            android:id="@+id/addEtfButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_input_add"
            android:tint="#007AFF"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ios_card_background"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/usSettingsTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/usSettingsTabIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_mapmode"
                android:tint="#007AFF"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/usSettingsTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US ETF Management"
                android:textSize="14sp"
                android:textColor="#007AFF"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="#E5E5EA" />

        <LinearLayout
            android:id="@+id/krSettingsTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/krSettingsTabIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_mapmode"
                android:tint="#8E8E93"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/krSettingsTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KR ETF Management"
                android:textSize="14sp"
                android:textColor="#8E8E93" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/currentTabTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="US ETF Stocks"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#8E8E93" />

        <ImageView
            android:id="@+id/searchToggleButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#007AFF"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ios_card_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Search ETF name or symbol..."
            android:textSize="16sp"
            android:textColor="#1C1C1E"
            android:background="@drawable/ios_expert_opinion_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:drawableTint="#8E8E93" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ios_expert_opinion_background"
            android:elevation="1dp"
            android:visibility="gone" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settingsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/ios_card_background"
        android:elevation="2dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/resetDefaultButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Reset to Default"
            android:textColor="#FFFFFF"
            android:background="@drawable/ios_button_unselected"
            android:backgroundTint="#FF3B30"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:background="@drawable/ios_button_selected"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>