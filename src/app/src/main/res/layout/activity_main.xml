<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <!-- Modern Header with Gradient -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_header"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <!-- Header Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- App Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI ETF Tracker"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_primary"
                android:fontFamily="sans-serif-medium" />

            <!-- Settings Button -->
            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:tint="@color/text_on_primary"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Time Display Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_modern"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- Time Zone Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New York: Dec 19, 09:30:15 AM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/primary_blue"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/koreaTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seoul: 12월 19일, 22:30:15"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="6dp"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

            <!-- Market Status -->
            <TextView
                android:id="@+id/marketCountdownText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Market opens in: 5h 30m 15s"
                android:textSize="12sp"
                android:textColor="@color/danger_red"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:background="@color/loss_red_bg"
                android:drawableStart="@android:drawable/ic_menu_agenda"
                android:drawablePadding="8dp"
                android:drawableTint="@color/danger_red"
                android:gravity="center_vertical"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- ETF List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Modern Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/card_modern"
        android:elevation="12dp"
        android:layout_margin="16dp"
        android:padding="8dp">

        <!-- Tab Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/neutral_100"
            android:padding="4dp">

            <!-- US Tab -->
            <LinearLayout
                android:id="@+id/usTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/tab_indicator"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/usTabIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:id="@+id/usTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="US Market"
                    android:textSize="14sp"
                    android:textColor="@color/text_on_primary"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- KR Tab -->
            <LinearLayout
                android:id="@+id/krTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/tab_indicator"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/krTabIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/krTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KR Market"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>