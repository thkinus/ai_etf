<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/ios_card_background"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invesco QQQ Trust ETF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/ios_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQQ"
                    android:textSize="14sp"
                    android:textColor="@color/ios_text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$378.52"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ios_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1.23%"
                    android:textSize="16sp"
                    android:textColor="@color/ios_green"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/ios_button_unselected"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_1d"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1D"
                android:textSize="14sp"
                android:background="@drawable/ios_button_unselected"
                android:textColor="@color/ios_text_secondary"
                android:fontFamily="sans-serif-medium"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_1w"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1W"
                android:textSize="14sp"
                android:background="@drawable/ios_button_selected"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_1m"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1M"
                android:textSize="14sp"
                android:background="@drawable/ios_button_unselected"
                android:textColor="@color/ios_text_secondary"
                android:fontFamily="sans-serif-medium"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_6m"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="6M"
                android:textSize="14sp"
                android:background="@drawable/ios_button_unselected"
                android:textColor="@color/ios_text_secondary"
                android:fontFamily="sans-serif-medium"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_1y"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1Y"
                android:textSize="14sp"
                android:background="@drawable/ios_button_unselected"
                android:textColor="@color/ios_text_secondary"
                android:fontFamily="sans-serif-medium"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert Opinions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/ios_text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/expert_opinions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>