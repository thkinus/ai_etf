<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:focusable="true">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- ETF Title & Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- ETF Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invesco QQQ Trust ETF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tv_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQQ"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@color/neutral_100"
                        android:padding="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                </LinearLayout>

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$378.52"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:background="@color/profit_green_bg"
                        android:padding="6dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–²"
                            android:textSize="12sp"
                            android:textColor="@color/profit_green"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tv_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1.23%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/profit_green"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Time Period Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/neutral_100"
                android:padding="6dp">

                <Button
                    android:id="@+id/btn_1d"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="1D"
                    android:textSize="14sp"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/btn_1w"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="1W"
                    android:textSize="14sp"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/text_on_primary"
                    android:fontFamily="sans-serif-medium"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/btn_1m"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="1M"
                    android:textSize="14sp"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/btn_6m"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="6M"
                    android:textSize="14sp"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/btn_1y"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="1Y"
                    android:textSize="14sp"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    style="?android:attr/borderlessButtonStyle" />

            </LinearLayout>

            <!-- Chart Section -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <!-- Expert Opinions Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Expert Opinions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expert_opinions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>